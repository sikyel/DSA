import java.util.Scanner;

public class BinarySearchExample {
    public static void main(String[] args) {
        int counter, num, item, array[], first, last, middle;
        
        // Step 4: To capture user input
        Scanner input = new Scanner(System.in);
        
        // Step 3: Read the number of elements
        System.out.println("Enter number of elements:");
        num = input.nextInt();
        
        // Step 5: Create an array to store the numbers
        array = new int[num];
        
        // Step 6: Loop to store each number in the array
        System.out.println("Enter " + num + " integers");
        for (counter = 0; counter < num; counter++) {
            array[counter] = input.nextInt();
        }
        
        // Step 7: Get the search value
        System.out.println("Enter the search value:");
        item = input.nextInt();
        
        // Step 8: Binary search logic
        first = 0;
        last = num - 1;
        middle = (first + last) / 2;
        
        while (first <= last) {
            if (array[middle] < item) {
                first = middle + 1;  // Narrow search to the upper half
            } else if (array[middle] == item) {
                System.out.println(item + " found at location " + (middle + 1) + ".");
                break;
            } else {
                last = middle - 1;  // Narrow search to the lower half
            }
            middle = (first + last) / 2;
        }
        
        if (first > last) {
            System.out.println(item + " is not found.");
        }
    }
}
